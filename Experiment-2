//Program=(A) For arithmetic operations like addition ,subtraction, multiplication,division//
#include<stdio.h>
int main(){
    int x,y, sum,sub,multi,div;
    printf("enter the value of x ");
    scanf("%d",&x);
    printf("enter the value of y ");  
    scanf("%d",&y);
    sum = x+y;
    sub = x-y;
    multi = x*y;
    div= x%y;
    printf("addition = %d\nsubtraction = %d\nmultiplication = %d\ndivision = %d",sum,sub,multi,div);
    return 0;
}    


//(B)TO calculate area and perimeter of circle,square and rectangle//
#include<stdio.h>
int main(){
    float r,s,l,b,x1,y1,x2,y2,x3,y3;
    printf("enter the value of radius r = ");
    scanf("%f",&r);
    printf("enter the value of side s =");
    scanf("%f",&s);
    printf("enter the value of length l =");
    scanf("%f",&l);
    printf("enter the value of breadth b =");
    scanf("%f",&b);
    x1 = 3.14*r*r;
    y1 = 2*3.14*r;
    x2 = s*s;
    y2 = 4*s;
    x3 = l*b;
    y3 = 2*(l+b);
    printf("area of circle =%f\nperimeter of circle =%f/narea of square =%f/nperimeter of square =%f/narea of rectangle =%f/nperimeter of rectangle =%f",x1,y1,x2,y2,x3,y3);
    return 0;
}


//(C) TO find the euclidean distance between two points in a plane//
#include<stdio.h> 
int main(){
    float x1,y1,x2,y2,distance;
    printf("enter x and y axid of point 1 =");
    scanf("%f%f",&x1,&y1);
    printf("enter x and y axis of point 2 =");
    scanf("%f%f",&x2,&y2);
    distance = sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    printf("Distance=%f",distance);
    return 0;
}    
















